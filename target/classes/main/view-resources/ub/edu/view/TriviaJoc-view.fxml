<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ub.edu.view.EscenaTriviaJoc">
    <Label fx:id="questionLabel" style="-fx-font-size: 18px;" text="Question will appear here" wrapText="true" />
    <VBox maxWidth="200.0" prefHeight="100.0" prefWidth="150.0" spacing="10">
        <RadioButton fx:id="option1" text="Option 1" />
        <RadioButton fx:id="option2" text="Option 2" />
        <RadioButton fx:id="option3" text="Option 3" />
    </VBox>
    <Button onAction="#submitAnswer" style="-fx-font-size: 14px;" text="Respondre" />
    <Label fx:id="feedbackLabel" style="-fx-font-size: 16px; -fx-text-fill: red;" text="" />
    <Button fx:id="accedirButton" onAction="#accedir" style="-fx-font-size: 14px;" text="Accedir" />
</VBox>
